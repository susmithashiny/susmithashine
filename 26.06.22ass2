#include <stdio.h>
#include<string.h>

int main() {
    char str[20];
    printf("enter a string\n");
    gets(str);
    int i=0;
    int j=strlen(str)-1;
    while (j>1)
    {
        if(str[i++]!=str[j--])
        {
            printf("%s is not a palindrome\n",str);
            
        }
    }
    printf("%s is a palindrome\n",str);


    return 0;
}
